        <div class="sidebar">
            <div class="sidebar-ele ai">Account Information</div>
            <div class="sidebar-ele cp">Change Password</div>
            <div class="sidebar-ele as">Account Security</div>
            <div class="sidebar-ele ce">Change E-mail</div>
            <div class="sidebar-ele ca">Change Avatar</div>
        </div>
        <div class="display">
            <div class="display-element account-information">
                <div class="personal-info">
                    <h4>Personal Info</h4>
                    <div class="widget">
                        <div class="personal-info-text bold">
                            <div class="nick-key">Nick:</div>
                            <div class="email-key">Email:</div>
                        </div>
                        <div class="personal-info-text">
                            <div class="nick-key">Username</div>
                            <div class="email-key">superman@gmail.com</div>
                        </div>
                    </div>
                </div>
                <div class="personal-info">
                    <h4>Account Status</h4>
                    <div class="widget">
                        <div class="personal-info-text bold">
                            <div class="nick-key">Nick:</div>
                            <div class="email-key">Email:</div>
                        </div>
                        <div class="personal-info-text">
                            <div class="nick-key">Username</div>
                            <div class="email-key">superman@gmail.com</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="display-element change-password hide">
                <div class="change-password-form">
                    <div class="change-password-form-labels">
                        <div class="table-row">
                            <text>Current Password:</text>
                        </div>
                        <div class="table-row">
                            <text>New Password:</text>
                        </div>
                        <div class="table-row">
                        <text>Confirm Password:</text>
                        </div>
                    </div>
                    <div class="input-fields">
                        <div class="table-row">
                            <input>
                        </div>
                        <div class="table-row">
                            
                            <input>
